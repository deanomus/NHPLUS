<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <HBox alignment="TOP_CENTER" prefWidth="200.0" spacing="25.0" AnchorPane.leftAnchor="5.0"
              AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" minWidth="400.0" text="Login" textAlignment="CENTER">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox layoutX="298.0" layoutY="237.0" spacing="20.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.rightAnchor="50.0"/>
        <Label layoutX="152.0" layoutY="112.0" text="Benutzername:">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
        <Label layoutX="185.0" layoutY="150.0" text="Passwort:" GridPane.columnIndex="2">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
        <TextField fx:id="txtUsername" layoutX="263.0" layoutY="109.0" maxWidth="192.0" prefWidth="150.0"/>
        <TextField fx:id="txtPassword" layoutX="263.0" layoutY="147.0" maxWidth="192.0" prefWidth="150.0"/>
        <Button fx:id="btnLogin" layoutX="263.0" layoutY="187.0" mnemonicParsing="false" onAction="#handleLogin"
                onMouseClicked="#loginClicked" text="Anmelden"/>
        <Button fx:id="btnCancel" layoutX="338.0" layoutY="187.0" mnemonicParsing="false" onAction="#handleCancel"
                text="Abbrechen"/>
        <DialogPane layoutX="54.0" layoutY="292.0"/>
        <Label fx:id="txtResult" layoutX="263.0" layoutY="84.0" prefHeight="17.0" prefWidth="260.0"/>
    </children>
</AnchorPane>
